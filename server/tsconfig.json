{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "lib": ["es2021", "dom"],
    "moduleResolution": "node",
    "baseUrl": "./",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "allowUnreachableCode": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "paths": {
      "@plugins/*": ["../plugins/*"]
    }
  },
  "baseDir": ".",
  "rootDir": ".",

  "include": ["./**/*", "../plugins/**/*"]
}
